<!-- 指定されたコードを貼り付けてください -->
<div class="main user-show">
  <div class="container">
    <div class="user">
      <img src="<%= "/user_images/#{@user.image_name}" %>">
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <% if @user.id == @current_user.id %>
        <%= link_to("編集", "/users/#{@user.id}/edit") %>
      <% end %>
      <% if @user.id != @current_user.id %>
        <%= link_to("つながり申請", "/connects/#{@user.id}/requesting", {method: "post"}) %>
        <%= link_to("推薦コメントを贈る", "/recommends/#{@user.id}/connecting") %>
        <%= link_to("DMを送る", "/rooms/#{@user.id}/investigating") %>
      <% end %>
    </div>
    
    <ul class="user-tabs">
      <li><%= link_to("プロフィール", "/users/#{@user.id}/profile") %></li>
      <li><%= link_to("投稿", "/users/#{@user.id}") %></li>
      <% if @user.id == @current_user.id %>
        <li><%= link_to("DM", "/users/#{@user.id}/rooms") %></li>
        <li><%= link_to("求人投稿", "/users/#{@user.id}/offers") %></li>
      <% end %>
      <li><%= link_to("いいね!", "/users/#{@user.id}/likes") %></li>
      <% if @user.id == @current_user.id %>
        <li><%= link_to("つながりリクエストしてきたユーザー", "/users/#{@user.id}/requested") %></li>
      <% end %>
      <li><%= link_to("つながり", "/users/#{@user.id}/connected") %></li>
      <li class="active"><%= link_to("推薦コメント", "/users/#{@user.id}/recommends") %></li>
    </ul>
    
    <!-- 変数@likesに対してeach文を用いてください -->
    <% @recommends.each do |recommend| %>
      <!-- 変数postを定義してください -->
      <% user = User.find_by(id: recommend.user_from) %>
      
      <div class="posts-index-item">
        <div class="post-left">
          <img src="<%= "/user_images/#{user.image_name}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(user.name, "/users/#{user.id}") %>
          </div>
          <%= link_to(recommend.content, "/recommends/#{recommend.id}") %>
        </div>
      </div>
    <!-- each文のendを追加してください -->
    <% end %>
  </div>
</div>