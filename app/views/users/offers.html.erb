<div class="main user-show">
  <div class="container">
    <div class="user">
      <img src="<%= "/user_images/#{@user.image_name}" %>">
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <% if @user.id == @current_user.id %>
        <%= link_to("編集", "/users/#{@user.id}/edit") %>
      <% end %>
      <% if @user.id != @current_user.id %>
        <%= link_to("つながり申請", "/connects/#{@user.id}/requesting", {method: "post"}) %>
        <%= link_to("推薦コメントを贈る", "/recommends/#{@user.id}/connecting") %>
      <% end %>
    </div>
    
    <!-- 指定されたコードを貼り付けてください -->
    <ul class="user-tabs">
      <li><%= link_to("プロフィール", "/users/#{@user.id}/profile") %></li>
      <li><%= link_to("投稿", "/users/#{@user.id}") %></li>
      <% if @user.id == @current_user.id %>
        <li class="active"><%= link_to("求人投稿", "/users/#{@user.id}/offers") %></li>
      <% end %>
      <li><%= link_to("いいね!", "/users/#{@user.id}/likes") %></li>
      <% if @user.id == @current_user.id %>
        <li><%= link_to("つながりリクエストしてきたユーザー", "/users/#{@user.id}/requested") %></li>
      <% end %>
      <li><%= link_to("つながり", "/users/#{@user.id}/connected") %></li>
      <li><%= link_to("推薦コメント", "/users/#{@user.id}/recommends") %></li>
    </ul>
    
    <% @user.offers.each do |offer| %>
      <div class="posts-index-item">
        <div class="post-left">
          <img src="<%= "/user_images/#{offer.user.image_name}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(offer.user.name, "/users/#{offer.user.id}") %>
          </div>
          <%= link_to(offer.title, "/offers/#{offer.id}") %>
        </div>
      </div>
    <% end %>
  </div>
</div>